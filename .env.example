# .env.example
# Environment configuration for MCP Analytical System
# Copy this file to .env and update with your values

# System settings
ENVIRONMENT=development
DEBUG_MODE=False

# LLM Provider settings
DEFAULT_LLM_PROVIDER=groq

# OpenAI configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Groq configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama4-8b
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=2000

# Anthropic configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2000

# Research settings
BRAVE_API_KEY=your_brave_api_key_here
RESEARCH_CACHE_ENABLED=True
RESEARCH_CACHE_DIR=cache/research
RESEARCH_MAX_RETRIES=3
RESEARCH_RETRY_DELAY=1

# Workflow settings
WORKFLOW_MAX_RETRIES=3
WORKFLOW_ADAPTATION_ENABLED=True
WORKFLOW_LOG_LEVEL=INFO

# Paths
TECHNIQUES_DIR=src/techniques
